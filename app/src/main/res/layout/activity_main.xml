<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:paddingBottom="15dp"
    android:paddingEnd="65dp"
    android:paddingLeft="65dp"
    android:paddingRight="65dp"
    android:paddingTop="15dp"
    tools:context="dangelo.justin.easybakeoven.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="506dp"
            android:layout_height="match_parent"
            android:layout_weight="0.09"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtTimer"
                android:layout_width="535dp"
                android:layout_height="78dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="791dp"
                android:layout_marginRight="791dp"
                android:text="00:00"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="60sp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="177dp"
                    android:layout_height="69dp"
                    android:onClick="ClickEvent"
                    android:text="7"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="177dp"
                    android:layout_height="69dp"
                    android:onClick="ClickEvent"
                    android:text="8"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="177dp"
                    android:layout_height="69dp"
                    android:onClick="ClickEvent"
                    android:text="9"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="177dp"
                    android:layout_height="69dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:onClick="ClickEvent"
                    android:text="4"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="177dp"
                    android:layout_height="69dp"
                    android:onClick="ClickEvent"
                    android:text="5"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="177dp"
                    android:layout_height="69dp"
                    android:onClick="ClickEvent"
                    android:text="6"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="177dp"
                    android:layout_height="69dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:onClick="ClickEvent"
                    android:text="2"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="177dp"
                    android:layout_height="69dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:onClick="ClickEvent"
                    android:text="1"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="177dp"
                    android:layout_height="69dp"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:onClick="ClickEvent"
                    android:text="3"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="177dp"
                    android:layout_height="69dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:onClick="ClickEvent"
                    android:text="Reset"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="177dp"
                    android:layout_height="69dp"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:onClick="ClickEvent"
                    android:text="0"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="177dp"
                    android:layout_height="69dp"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:onClick="ClickEvent"
                    android:text="Start"
                    android:textSize="24sp" />

            </GridLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="307dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageCookie"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="ClickEvent"
                android:paddingLeft="25dp"
                app:srcCompat="@drawable/cookiedough" />
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
